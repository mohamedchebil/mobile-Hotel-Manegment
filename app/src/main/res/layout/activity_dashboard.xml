<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/btnChauffeurList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chauffeur List"
            android:layout_marginTop="16dp"
            android:onClick="navigateToChauffeurList"/>

        <Button
            android:id="@+id/btnUserDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="admin Details"
            android:layout_marginTop="16dp"
            android:onClick="navigateToUserDetails"/>

        <TextView
            android:id="@+id/eventCountTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Events: "
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:background="@android:color/holo_blue_light"/>

        <TextView
            android:id="@+id/clientCountTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clients: "
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:background="@android:color/holo_green_light"/>

        <TextView
            android:id="@+id/employeeCountTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Employees: "
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:background="@android:color/holo_orange_light"/>

        <TextView
            android:id="@+id/mostSavedAddressesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Most Saved Addresses"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/mostSavedAddressesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/mostEmployeesDepartmentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Most Employees Department: "
            android:textSize="18sp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/departmentsMostEmployeesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Departments by Most Employees"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
